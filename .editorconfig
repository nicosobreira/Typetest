root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h}]
max_line_length = 80

[*.{cpp,hpp,cc,cxx,hxx}]
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 4

[CMakeLists.txt]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
